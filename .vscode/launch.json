{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.vscode/_cli.py",
            "console": "integratedTerminal",
            "args": [
                "test",
                "${file}"
            ],
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Run Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        }
    ]
}